<%# h1, span12 %>
<% content_for :scripts do %>
  <%= javascript_include_tag "venues_map" %>
<% end %>
<div class="row">
  <div class="span8">
    <div id="venues_map" class="well"
         data-base-latitude="<%= Settings.geo.locations.base.latitude %>"
         data-base-longitude="<%= Settings.geo.locations.base.longitude %>"></div>
  </div>
  <div class="span4">
    <div class="page-header">
      <h1>Venues <%= link_to "Add New", new_venue_path, :class => 'btn btn-primary' %></h1>
    </div>
    <div class="venue-list venues-map-data-source">
      <% @venues.each do |venue| %>
        <%= render 'venue_item', :venue => venue %>
      <% end %>
    </div>
  </div>
</div>