<h1>Listing rides</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Leaving at</th>
      <th>Return at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
    <tr>
      <td><%= ride.user_id %></td>
      <td><%= ride.leaving_at %></td>
      <td><%= ride.return_at %></td>
      <td><%= link_to 'Show', ride %></td>
      <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
      <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Ride', new_ride_path %>
